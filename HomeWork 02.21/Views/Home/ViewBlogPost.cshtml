@model PostViewModel

<!-- Post Content Column -->
<div class="col-lg-8">

    <!-- Title -->
    <h1 class="mt-4">@Model.Post.Title</h1>

    <hr>

    <!-- Date/Time -->
    <p>@Model.Post.DateTime.ToLongTimeString()</p>

    <hr>

    <p style="font-size:20px;">@Model.Post.Content</p>
    <hr>

    <!-- Comments Form -->
    <div class="card my-4">
        <h5 class="card-header">Leave a Comment:</h5>
        <div class="card-body">
            <form method="post" action="/home/addcomment">
                <input type="hidden" value="@Model.Post.Id" name="postId" id="postId"  />
                <div class="form-group">
                    <input id="commenter" type="text" placeholder="Please enter your name" class="form-control" name="name" value="@Model.CommenterName"/>
                </div>
                <div class="form-group">
                    <textarea placeholder="Type your comment here but remember to be nice..." id="content" name="content" class="form-control mt-3" rows="3"></textarea>
                </div>
                <button id="submit" disabled class="btn btn-primary mt-3">Submit</button>
            </form>
        </div>
    </div>




</div>

@section Scripts {
    <script src="/js/AddComment.js"></script>
}